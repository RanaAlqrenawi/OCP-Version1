                            <Button x:Name="MenuButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE8D1;"
                                Width="50" Height="50" Background="Transparent"/>
                            <TextBlock Text="Today" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="subB11" FontFamily="Segoe MDL2 Assets" Content="&#xE004;"
